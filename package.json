{
  "name": "layout_landing-page",
  "homepage": "Bang-Olufsen-shop",
  "version": "1.0.0",
  "description": "Landing page",
  "type": "module",
  "scripts": {
    "clean": "parcel clean",
    "frontend": "parcel src/index.html",
    "frontend:prod": "parcel build src/index.html --dist-dir dist",
    "style-format": "npx stylelint 'src/**/*.scss' --fix --allow-empty-input",
    "format": "prettier --ignore-path .prettierignore --write './src/**/*.{html,css,scss}'",
    "lint": "npm run style-format && npm run format && mate-scripts lint",
    "test": "npm run lint && npm run test:only",

    "predeploy": "npm run frontend:prod",
    "deploy": "gh-pages -d dist"
  },
  "keywords": [],
  "author": "Elisabeth Polska",
  "license": "GPL-3.0",
  "devDependencies": {
    "@linthtml/linthtml": "^0.9.5",
    "@mate-academy/bemlint": "latest",
    "@mate-academy/linthtml-config": "latest",
    "@mate-academy/scripts": "^1.9.12",
    "@mate-academy/stylelint-config": "latest",
    "@parcel/transformer-sass": "^2.13.0",
    "cypress": "^9.7.0",
    "gh-pages": "^6.3.0",
    "jest": "^29.7.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "parcel": "^2.13.0",
    "prettier": "^3.2.5",
    "stylelint": "^15.11.0"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "mateAcademy": {
    "projectType": "layout",
    "linters": {
      "javascript": false,
      "bem": false
    },
    "tests": {
      "jest": false,
      "backstop": false,
      "cypress": true
    }
  },
  "dependencies": {
    "simplebar": "^6.3.0"
  }
}
